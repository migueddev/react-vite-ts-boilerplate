{
  "name": "react-vite-ts-boilerplate",
  "description": "Este es un Boilerplate para un proyecto en React usando Vite, Typescript, ESLint, Prettier, Husky, Commitlint y Standard-Version",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "keywords": [
    "Boilerplate",
    "Vite",
    "Typescript",
    "ESLint",
    "Prettier",
    "Husky",
    "Commitlint",
    "Standard-Version"
  ],
  "author": "Miguel Angel Dur√°n Romero",
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint \"*/**/*.{js,ts,jsx,tsx}\" --fix",
    "preview": "vite preview",
    "prettier": "prettier --write .",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "prepare": "husky",
    "commit:pre": "npm run prettier && npm run lint",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "standard-version": "^9.5.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}
